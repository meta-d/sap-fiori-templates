{
  "name": "btp-cap-standalone",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1.3.1",
    "@sap/cds": "^7",
    "@sap/xssec": "^3",
    "express": "^4",
    "passport": "^0"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7",
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "concurrently \"cds w\" \"cd apps/launchpad && npm start\"",
    "build-blp": "cd apps/launchpad && npm run build && cd ../.. && rm -rf ./app/launchpad/ && mv ./apps/launchpad/dist/launchpad/browser/ ./app/launchpad/",
    "build": "npm run build-blp && mbt build -t gen --mtar mta.tar -e less.mtaext",
    "deploy": "cf deploy gen/mta.tar"
  },
  "cds": {
    "requires": {
      "[production]": {
        "db": "postgres",
        "auth": "xsuaa"
      },
      "db": {
        "kind": "postgres",
        "impl": "@cap-js/postgres"
      }
    }
  }
}
